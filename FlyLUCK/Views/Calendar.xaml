<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
		x:Class="FlyLUCK.Calendar">

	<ContentPage.Content>
		<StackLayout>
			<StackLayout Spacing="0" HorizontalOptions="Start" VerticalOptions="Center" Padding="20"></StackLayout>
				<ActivityIndicator x:Name="indicator" IsVisible="{Binding IsLoading}" IsRunning="{Binding IsLoading}" 
						VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">

				</ActivityIndicator>
			<StackLayout x:Name="layout" Padding="20"></StackLayout>
			<StackLayout x:Name="footer" Padding="20" VerticalOptions="EndAndExpand">
				<Grid x:Name="buttonbar" HorizontalOptions="FillAndExpand">
					<Grid.RowDefinitions>
						<RowDefinition Height="35" />
					</Grid.RowDefinitions>
				</Grid>
			</StackLayout>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
