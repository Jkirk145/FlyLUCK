<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="FlyLUCK.LoginPage">

	<ContentPage.Content>
		<Grid >
            <Image Source="login_background.png" Aspect="AspectFill" />
            <!-- Place here the rest of the layout for the page. -->
			<StackLayout VerticalOptions="CenterAndExpand" Padding="20" Spacing="30" >
				<Label HorizontalTextAlignment="Center" Text="Welcome to FlyLUCK! Please enter your email address to begin." TextColor="Silver" />
				<Entry x:Name="userID" BackgroundColor="Transparent" TextColor="Silver" Placeholder="Email address..." PlaceholderColor="Silver" Opacity="0.8" />
				<Button Text="Login" TextColor="Silver" Clicked="Handle_Clicked" />
			</StackLayout>
        </Grid >
	</ContentPage.Content>
</ContentPage>
